<h2>Login</h2>

<%= form_for :user do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, :required => true %>
  </div>
    <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, :required => true %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>
