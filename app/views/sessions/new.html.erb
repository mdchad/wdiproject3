<div class="container">
  <div class="container">
    <div class="container">
      <div class="twelve columns" style="margin: 0 auto; border: solid 1px #555;border-radius:10px; padding: 20px;">
        <%= form_for :user do |f| %>
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, :required => true, class: "u-full-width" %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, :required => true, class: "u-full-width" %>
          </div>
          <div class="action">
            <%= f.submit "Login" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
