<div class="row">
  <div class="six columns offset-by-three space-top">
    <%= form_for(pledge) do |f| %>
      <% if pledge.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(pledge.errors.count, "error") %> prohibited this pledge from being saved:</h2>

          <ul>
          <% pledge.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :amount %>
        <%= f.number_field :amount, placeholder: "Pledge amount", class: "u-full-width" %>
      </div>

      <%= f.hidden_field :goal_id, :value=> id %>

      <!-- <div class="field">
        <%= f.label :goal_id %>
        <%= f.select :goal_id, goals.collect {|x| [x.title, x.id]}, {}, {:disabled => true} %>
      </div> -->

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

    <%= link_to 'Back', goals_path %>
  </div>
</div>
