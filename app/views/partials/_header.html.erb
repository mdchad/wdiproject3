<nav>
  <input class="menu-btn navbar" type="checkbox" id="menu-btn">
  <label class="menu-icon navbar" for="menu-btn"><span class="navicon"></span></label>
  <ul id="nav-menu">
    <% if current_user.present? %>
    <li class="nav-label">
      <button id="myBtn" type="button" name="button"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
      <div id="myModal" class="modal">
        <div class="modal-content">
           <div class="modal-header twelve columns">
             <span class="close">&times</span>
             <%= form_tag(goals_path, :method => "get", class:"no-bottom") do %>
               <%= text_field_tag :search, params[:search], placeholder: "Search goals", class:"nine columns no-bottom" %>
               <%= submit_tag "Search", :name => nil, class:"no-bottom left-space" %>
             <% end %>
           </div>
        </div>
      </div>
    </li>
    <li class="nav-right">
      <%= link_to "#{current_user.name}", profile_path %>
    </li>
    <li class="nav-right">
      <%= link_to 'Edit Profile', profile_edit_path %>
    </li>
    <li class="nav-right">
      <%= link_to 'Logout', logout_path, method: :delete %>
    </li>
    <% else %>
    <li class="nav-label">
      <h3><%= link_to "Chivalrous Run", root_path, class: "nav-label head-title"%></h3>
    </li>
    <li class="nav-right">
      <%= link_to 'Register', register_path%>
    </li>
    <li class="nav-right">
      <%= link_to 'Login', login_path%>
    </li>
    <% end %>
  </ul>
</nav>
